<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>MY EJS TEMPLATE</title>
    </head>
    <body>
        <fieldset>
            <legend>
                <h1>Location-App</h1>
            </legend>
            <a href="http://localhost:3000/api/location/addLocation/<%= findTopParent._id %>"
                ><button>Add location</button></a
            >
            <a href="http://localhost:3000/api/location/addProduct"><button>Add product</button></a>
            <br />
            <table id="table" border="2">
                <tr>
                    <td class=".col">Location Name</td>
                    <td class=".col">Edit</td>
                    <td class=".col">Delete</td>
                    <td class=".col">Product</td>
                    <td class=".col">Child Product</td>
                </tr>

                <% findTopParent.forEach(location => { %>
                <tr>
                    <td>
                        <a
                            href="http://localhost:3000/api/location/<%= location._id %>"
                            class="parent-link"
                            data-location-id="<%= location._id %>"
                            ><%= location.locationName %></a
                        >
                    </td>
                    <!-- <td><input type="button" id="Edit" name="Edit" value="Edit" /></td>
                    <td><input type="button" id="Delete" name="Delete" value="Delete" /></td> -->
                    <td>
                        <a href="http://localhost:3000/api/location/<%= location._id %>?_method=PUT">
                            <button>Edit</button></a
                        >
                    </td>
                    <td>
                        <a href="http://localhost:3000/api/location/<%= location._id %>?_method=DELETE">
                            <button>Delete</button></a
                        >
                    </td>
                    <td><%= location.childProductName %></td>
                </tr>
                <% }) %>
            </table>
        </fieldset>
    </body>
</html>
